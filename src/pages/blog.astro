---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import TagsList from "../components/TagsList.astro";
const allPostsGlob = await import.meta.glob("./posts/*.md", { eager: true });
const allPosts = Object.values(allPostsGlob);

const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

const pageTitle = "Mi blog de Astro aprendizaje";
---

<BaseLayout pageTitle={pageTitle}>
    <p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>
    {
        allPosts.map((post) => (
            <BlogPost url={post.url} title={post.frontmatter.title} />
        ))
    }
    <TagsList tags={tags} />
</BaseLayout>
